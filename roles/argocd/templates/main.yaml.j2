apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: main-app
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/amirianos/k8s-manifests.git
    targetRevision: main
    path: ./
  destination:
    server: https://kubernetes.default.svc
    namespace: deploy
  syncPolicy:
    automated: 
      prune: true
